<%= image_tag 'wine_bottle_2', {height: 75, width: 75, class: "left"} %><h1 id="sofia-font"> Find the Best Wines: <%= @filter_name%> </h1>
<div class="right-align">
<h5 id="sofia-font"><i>Don't see your favorite wine?</i></h5>
<%= link_to "Add a Wine", new_wine_path, class: "waves-effect waves-light btn-small" %>
</div>

<% if @wines.length != 0 %>
    <table class="striped">
        <thead>
        <tr>
            <th>Avg. Rating</th>
            <th>Name</th>
            <th>Varietal</th>
            <th>Year</th>   
        </tr>
        </thead>

        <tbody>
        <% @wines.collect do |wine|%>
        <tr>
            <td><%= wine.average_rating %></td>
            <td><%= link_to wine.name, wine_path(wine)%></td>
            <td><%= wine.varietal.name %></td>
            <td><%= wine.year %></td>
        </tr>
        <% end %>
        </tbody>
    <table>
<% else %>
   <p>No wines here yet!<p>
<% end %>
