<!DOCTYPE html>
<html>
  <head>
    <title>RateMyWine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div>
  <%= link_to "Wines", wines_path %>
  <%= link_to "Varietals", varietals_path %>
  <%= link_to "Regions", regions_path %>
  <%= link_to "Reviews", reviews_path %>
    <% if !logged_in? %>
    <%= link_to "Login", login_path %>
  <% end %>
  <% if logged_in? %>
    <%= link_to "Home", user_path(current_user.id) %>
    <%= link_to "Logout", logout_path, method: :delete %>
  <% end %>

  </div>



  <body>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
